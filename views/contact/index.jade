extends ../layout

block content
  
  .container.row.main
  
    include ../left_nav
    
    #center-col.mobile-full
      
      h1 Contact Us
      
      .details
        form.details-form(action='/contact', method='post')
          
          include ../flashify
          
          .left.mobile-full
            .inputs 
              label(for='type') Enquiry Type
              select#type(name='type', class='select2')
                option General Enquiry
                option Developer Enquiry
                option Advertising Enquiry
            
            .inputs
              label(for='name') Name
              input#name(type='text', name='name', placeholder='Full Name')
            
            .inputs
              label(for='phone') Phone
              input#phone(type='tel', name='phone', placeholder='Contact Phone')
            
            .inputs
              label(for='email') Email
              input#email(type='email', name='email', placeholder='Email')
            
            .inputs
              label(for='contact_method') Preferred Contact Method
              select#contact_method(name='contact_method', class='select2', style="width:10em;")
                option Phone
                option Email
          
          .right.mobile-full
            .inputs
              label(for='company') Company
              input#company(type='text', name='company', placeholder='Company')
            
            .inputs
              label(for='address') Address
              input#email(type='text', name='address', placeholder='Address')
            
            .inputs
              label(for='city') City/Suburb
              input#city(type='text', name='city', placeholder='City or Suburb')
            
            .inputs
              label(for='state') State
              select#state(name='state', class='select2', style="width:10em;")
                option
                option ACT
                option NSW
                option QLD
                option NT
                option VIC
                option WA
                option TAS
          
          .inputs
          
          .inputs 
            label(for='city') Comments
            textarea(rows='7', name='comments', placeholder='Comments')
          
          .submit
            button.button Send Enquiry
    
    include ../right_nav