extends ../layout

block content
  //
    main content
  .container.row.main
    include ../left_nav
    //
      center-col
    #center-col
      h1 Contact Us
      .details
        form.details-form(action="/contact",method="post")
          include ../flashify
          .left
            .inputs 
              label(for="type") Enquiry Type
              select#type(name="type")
                option General Enquiry
                option Developer Enquiry
                option Advertising Enquiry
            .inputs
              label(for="name") Name
              input#name(type="text",name="name",placeholder="Full Name")
            .inputs
              label(for="phone") Phone
              input#phone(type="text",name="phone",placeholder="Contact Phone")
            .inputs
              label(for="email") Email
              input#email(type="text",name="email",placeholder="Email")
            .inputs
              label(for="contact_method") Preferred Contact Method
              select#contact_method(name="contact_method")
                option Phone
                option Email
          .right
            .inputs
              label(for="company") Company
              input#company(type="text",name="company",placeholder="Company")
            .inputs
              label(for="address") Address
              input#email(type="text",name="address",placeholder="Address")
            .inputs
              label(for="city") City/Suburb
              input#city(type="text",name="city",placeholder="City or Suburb")
            .inputs 
              label(for="state") State
              select#state(name="state")
                option ACT
                option NSW
                option QLD
                option NT
                option VIC
                option WA
                option TAS
          .inputs
          .inputs 
            label(for="city") Comments
            textarea(rows=7,placeholder="Comments")
          .submit
            button.button Send Enquiry
    //
      end center-col
    //
      right-col
    #right-col
      img#ad-tower1.ad-tower(src='images/ad-tower.jpg', alt='Tower Advert')
      img#ad-tower2.ad-tower(src='images/ad-tower.jpg', alt='Tower Advert')
    //
      end right-col
    