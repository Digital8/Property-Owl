extends ../layout

block content
  
  .container.row.main
    
    include ../left_nav
    
    #center-col
      h1 My Account
        
      .grid-header.form-header.pane-nav
        include menu
    
      .tabs.account  
        .tabs-content
          .padding  
            table.admin-gridview
                thead
                  tr
                    td Title
                    td Deal Type
                    //- td Deal Status
                    td Date Listed
                    td Actions
                
                tbody
                  - if (bookmarks && bookmarks.length)
                    - each bookmark in bookmarks
                      include bookmark
                  -else
                    h4 No deals have been bookmarked yet
    
    include ../right_nav