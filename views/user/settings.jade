extends ../layout

block content
  .container.row.main
    
    include ../left_nav
    
    #center-col
      
      legend
        h1 My Account
      
      .grid-header.form-header.pane-nav
        include menu
        
      .details
        
        form.details-form(action="/account",method="post")
          
          input(type='hidden', name='_method', value='put')
          
          include ../flashify
          
          .left
            .inputs 
              label(for='fname') First name
              input(type='text', name='fname', value=objUser.firstName)
            .inputs 
              label(for='lname') Last name
              input(type='text', name='lname', value=objUser.lastName)
            .inputs
              label(for='company') Company
              input(type='text', name='company', value=objUser.company)
            .inputs
              label(for='email') Email
              input(type='email', name='email', value=objUser.email)
            .inputs
              label(for='phone') Phone
              input(type='tel', name='phone', value=objUser.phone)
            .inputs
              label(for='work_phone') Work Phone
              input(type='tel', name='work_phone', value=objUser.work)
            .inputs
              label(for='mobile') Mobile
              input(type='tel', name='mobile', value=objUser.mobile)
          .right
            .inputs
              label(for='password') Password
              input(type='password', name='password', value="")
              label(for='confirmPassword') Confirm Password
              input(type='password', name='confirmPassword', value="")
              small Password will not change if left blank
            .inputs
              label(for='address') Address
                td
                  textarea(name='address')= objUser.address
            .inputs
              label(for='suburb') Suburb
                td
                  input(type='text', name='suburb', value=objUser.suburb)
            .inputs
              label(for='postcode') Postcode
                td
                  input(type='text', name='postcode', value=objUser.postcode)
            .inputs
              label(for='subscribed_news') Subscribed to Newsletter
                td
                  select(name='subscribed_news', class="half-field")
                    - var sel = (objUser.subscribedNewsletters == '1') ? true : false
                    option(value='1', selected=sel) Yes
                    - var sel = (objUser.subscribedNewsletters == '0') ? true : false
                    option(value='0', selected=sel) No
            .inputs
              label(for='property_alerts') Subscribed to Property Alerts
                td
                  select(name='property_alerts', class="half-field")
                    - var sel = (objUser.subscribedAlerts == '1') ? true : false
                    option(value='1', selected=sel) Yes
                    - var sel = (objUser.subscribedAlerts == '0') ? true : false
                    option(value='0', selected=sel) No
          .inputs
          .submit
              input.button(type='submit', value='Save')
    
    include ../right_nav