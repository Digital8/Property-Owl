extends ../layout
block content
  //
    main content
  .container.row.main
    include ../left_nav
    
    #center-col.mobile-full
      h1 Sign Up
      .details
       form.details-form(action="/sign-up",method="post")
        include ../flashify
        .left
          .inputs
            label(for='first-name') First Name
            - if (values.fname == undefined) values.fname = ''
            input#first-name(type="text",name="fname",placeholder="First Name",value="#{values.fname}")
          .inputs
            label(for='password') Password
            input#password(type="password",placeholder="Password",name="password")
            | &nbsp;
            input#confirmPassword(type="password",placeholder="Confirm Password",name="confirmPassword")
        .right
          .inputs
            label(for='last-name') Last Name
            - if (values.lname == undefined) values.lname = ''
            input#last-name(type="text",name="lname",placeholder="Last Name",value="#{values.lname}")
          .inputs
            label(for='email') Email
            - if (values.email == undefined) values.email = ''
            input#email(type="text",name="email",placeholder="Email",value="#{values.email}")
        .inputs
        .submit
          a.left-button(href="/login") Login
          input.button(type="submit",value="Sign Up")
          - var redirect_url = (typeof(redirect) !== "undefined") ? redirect : '/'
          input(type="hidden",name="redirect",value="#{redirect_url}")
    //
      end center-col
    //
      right-col
    include ../right_nav
    //
      end right-col