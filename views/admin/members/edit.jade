extends ../../layout

block content
  
  .container.row.main
    
    include ../menu
    
    h1 Edit Member: #{values.first_name} #{values.last_name}
    
    include actions

    .grid-header.form-header

    .details
      h2 User Details
      
      hr
      
      form.details-form(action="/admin/members/#{values.user_id}", method='post')
        
        include ../../flashify
        
        input(type="hidden",name="_method",value="put")
        
        include inputs
        
        .submit
         input.button(type='submit', value='Update User')
         a.left-button(href="/admin/members") Cancel
