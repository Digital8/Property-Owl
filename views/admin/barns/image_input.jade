tr.media(data-id=image.id, data-type=image.type, data-entity-id=barn.id)
  
  td
    if(image.filename)
      img.grid-thumb(src='/uploads/#{image.filename}')
  
  td
    input(type='radio', name='feature_image', checked=barn.feature_image == image.id, value=image.id)
  
  td
    a.delete(href='/admin/barns/#{barn.id}/delete', alt='delete barn deal')
      img(src='/images/delete.png', alt='Delete')
