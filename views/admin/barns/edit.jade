extends ../../layout

block content
  
  .container.row.main
    
    include ../menu
    
    h1 Edit Barn Deal
    
    include actions
    
    .grid-header.form-header.pane-nav
    
    .details
      
      form.details-form.deal.fake(action="/barns/#{barn.id}", method='post', enctype='multipart/form-data', data-id=barn.id)
        
        input(type='hidden', name='_method', value='put')
        
        include ../../flashify
        
        include inputs

        .submit
          input.button(type='submit', value='Edit Barn').addBarn
          a.left-button(href="/barns") Cancel