extends ../../layout

block content
 .container.row.main
    include ../../admin-menu
    
    h1 Barn Deals
    
    include ../../flashify
    
    p Property: #{property.address}, #{barn.suburb}, #{barn.postcode}
    
    h3 Are you sure you want to delete this from the barn deal?
    
    form(action="/admin/barn/delete/#{barn.property_id}/#{property.property_id}", method="post")
      input(type="hidden",name="_method",value="delete")
      p
        input(type="submit", value="Yes, delete")
        | &nbsp; 
        a(href="#") Cancel