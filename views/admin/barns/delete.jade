extends ../../layout

block content
 .container.row.main
    include ../menu
    
    h1 Delete Barn Deal
    
    include ../../flashify
    
    p Property: #{property.address}, #{barn.suburb}, #{barn.postcode}
    
    h3 Are you sure you want to delete this from the barn deal?
    
    form(action="/admin/barn/#{barn.barn_id}/owls/#{property.property_id}", method='post')
      input(type='hidden', name='_method', value='delete')
      
      p
        input(type="submit", value="Yes, delete")
        | &nbsp; 
        a(href="#") Cancel