extends ../../layout

block content
  
  .container.row.main
    
    include ../menu
    
    h1 Add Article
    
    include actions
    
    .grid-header.form-header
    
    .details
      
      h2 News Details
      
      hr
      
      form.details-form(action='/admin/news', method='post', enctype="multipart/form-data")
        
        include ../../flashify
        
        include inputs
        
        .submit
          input.button(type='submit', value='Post News')
          a.left-button(href='/admin/news') Cancel 