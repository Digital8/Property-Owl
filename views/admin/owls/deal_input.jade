tr.deal(data-id=deal.id, data-value=deal.value, data-type=deal.type, data-description=deal.description)
  td
    select.type(type='text', name='deal_type_id', data-index='#{deal.id}')
      option
      - each dealType in data.dealTypes
        option(value='#{dealType.id}', selected=deal.deal_type_id == dealType.id)= dealType.name
  td
    input.name(type='text', name='name', placeholder='default', value='#{deal.description}')
  td
    input#value(type='number', name='value', value='#{deal.value}')
  td
    //- input#delete(type='checkbox', name='delete[]', value='#{deal.id}')
    a.delete(href='#', alt='delete owl deal')
      img(src='/images/delete.png', alt='Delete')
      | Delete