  label.required Images

.inputs

.inputs
  
  table.admin-gridview.images
    
    thead
      tr
        td Thumb
        td Hero Image
        td Actions
    
    tbody.body
      - if (owl.images && owl.images.length)
        - each image in owl.images
          include image_input
    
    tfooter.footer
      tr
        td(colspan='3')
          label Upload
          input#image(type='file', name='image', multiple)