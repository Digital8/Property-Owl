extends ../../layout

block content
  
  .container.row.main
    
    include ../menu
    
    h1 Add Owl Deal
    
    include actions
    
    .grid-header.form-header.pane-nav
    
    .details
      
      form.details-form.deal.fake(action='/owls', method='post', enctype='multipart/form-data', data-id=owl.id)
        
        include ../../flashify
        
        include inputs
        
        .submit
          input.button(type='submit', value='Create Owl').owl-button
          a.left-button(href='/owls') Cancel