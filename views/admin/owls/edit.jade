extends ../../layout

block content
  .container.row.main
    
    include ../../admin-menu
    
    h1 Edit Owl
    
    include actions
    
    .grid-header.form-header
      ol.six
        li.active
          .ol-1-active
          | Details
    
    .details
      h2 Owl Details
      
      hr
      
      form.details-form(action='/owls', method='post')
        
        include ../../flashify
        
        include inputs
        
        include image_inputs
        
        .submit
          input.button(type='submit', value='Edit Owl')
          a.left-button(href='/admin/owls') Cancel