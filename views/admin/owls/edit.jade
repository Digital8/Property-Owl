extends ../../layout

block content
  
  .container.row.main
    
    include ../menu
    
    h1 Edit Owl Deal
    
    include actions
    
    .grid-header.form-header.pane-nav
    
    .details
      
      form.details-form.fake.owl(action="/admin/owls/#{owl.id}", method='post', enctype='multipart/form-data', data-id=owl.id)
        
        input(type='hidden', name='_method', value='put')
        
        include ../../flashify
        
        include inputs
        
        .submit
          input.button(type='submit', value='Edit Owl').owl-button
          a.left-button(href='/admin/owls') Cancel
  script
    $(document).ready(function(){
        $('.owl-button').click(function(e){
          e.preventDefault();
          $("#generic-modal, #generic-modal .modal.main").removeClass('success');
          $('#generic-modal-title').html('Processing...');
          $('#generic-modal-content').html('Processing your request. Please be patient..');        
          $('#generic-modal').show(150);
          $('.details-form').submit();
        });
    });
