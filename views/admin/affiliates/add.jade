extends ../../layout

block content
  .container.row.main
    
    include ../menu
    
    h1 Add Affiliate
    
    include actions
    
    .grid-header.form-header
    
    .details
      h2 Affiliate Details
      
      hr
      
      form.details-form(action='/affiliates/add',method='post', enctype='multipart/form-data')
        
        include ../../flashify
        
        include inputs
        
        .submit
          input.button(type='submit', value='Create Affiliate')
          a.left-button(href='/affiliates') Cancel