extends ../../layout

block content

  .container.row.main
    
    include ../menu
    
    h1 Edit Advertiser: #{advertiser.name}
    
    include actions
    
    .grid-header.form-header
    
    .details
      h2 Advertiser Details
      
      hr
      
      form.details-form(action='/admin/advertisers/#{advertiser.advertiser_id}', method='post')
        
        include ../../flashify
        
        input(type='hidden', name='_method', value='put')
        
        include inputs
        
        .submit
          input.button(type='submit', value='Update')
          a.left-button(href='/admin/advertisers') Cancel  