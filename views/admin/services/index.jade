extends ../../layout

block content
 //
   main content
 .container.row.main
   include ../../admin-menu
   h1 Product & Service Suppliers
   .admin-actions
      ul
        li
          a(href='/admin/services/add')
            img(src='/images/add.png')
            | &nbsp;
            | Add New Supplier
   .grid-header
     form#search-form
       input#propertySearch(type='text')
       | &nbsp;
       input.button(type='submit', value='Go')
       | &nbsp;
       input.button(type='submit', value='Reset')
       .divider
       | &nbsp;
       select#supplierState
         option State
         option ACT
         option NSW
         option NT
         option QLD
         option SA
         option TAS
         option VIC
         option WA        
       | &nbsp;
       select#supplierCategory
         option Category
         option Interior Design
         option Building
         option Furnishings
         option Building
         option Legal Services
   table.admin-gridview
     thead
       tr
         td Name
         td Category
         td Suburb
         td State
         td Visible
         td Enquiries
         td(colspan='3') Actions
     tbody
      - each service in services
         tr
           td= service.company
           td= service.category
           td= service.suburb
           td= service.state.toUpperCase()
           td Yes
           td 65
           td.actions
             a(href='/products/#{service.service_id}', alt='view property', target="_blank")
               img(src='/images/view.png', alt='View')
               | View
           td.actions
             a(href='/admin/services/edit/#{service.service_id}', alt='edit property')
               img(src='/images/edit.png', alt='Edit')
               | Edit
           td.actions
             a(href='/admin/services/delete/#{service.service_id}', alt='delete property')
               img(src='/images/delete.png', alt='Delete')
               | Delete
     tfoot
       tr
         td(colspan='12')&nbsp;
           //
            ul.pager
             li.disabled
               a(href='#') Prev
             li.selected
               a(href='#') 1
             li
               a(href='#') 2
             li
               a(href='#') 3
             li
               a(href='#') 4
             li
               a(href='#') Next
