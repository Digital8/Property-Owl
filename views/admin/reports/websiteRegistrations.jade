extends ../../layout

block content
  .container.row.main
    include ../menu
    h1 Reports
      span.secondary  - User Website Registrations
    include reportsMenu
    .grid-header
      form#search-form(action="", method="get")
        select#propertyMonth(name="month")
          option(value="all") Month
          option(value="jan") January
          option(value="feb") February
          option(value="mar") March
          option(value="apr") April
          option(value="may") May
          option(value="jun") June
          option(value="jul") July
          option(value="aug") August
          option(value="sep") September
          option(value="oct") October
          option(value="nov") November
          option(value="dec") December
        .divider
        select#propertyState(name="state")
          option(value='all') State
          option(value="act") ACT
          option(value="nsw") NSW
          option(value="nt") NT
          option(value="qld") QLD
          option(value="sa") SA
          option(value="tas") TAS
          option(value="vic") VIC
          option(value="wa") WA
        .divider
        | &nbsp;
        input.button(type='submit', value='Go')
        | &nbsp;
        input.button(type='submit', value='Reset')
    table.admin-gridview
      thead
        tr
          td Date
          td State
          td Registration Count

      tbody
      if members.length == 0
        tr
          td ---
          td ---
          td ---
      else
        each member in members
          tr
            - var listed = new Date(member.created_at)
            td #{listed.getDay()}/#{listed.getMonth()}/#{listed.getFullYear()}
            td= member.state.toUpperCase()
            td= member.total

    script
        window.onload = function () {
            var r = Raphael("holder"),
                txtattr = { font: "12px sans-serif" };
            
            var x = [], y = [], y2 = [], y3 = [];

            for (var i = 0; i < 1e6; i++) {
                x[i] = i * 10;
                y[i] = (y[i - 1] || 0) + (Math.random() * 7) - 3;
                y2[i] = (y2[i - 1] || 150) + (Math.random() * 7) - 3.5;
                y3[i] = (y3[i - 1] || 300) + (Math.random() * 7) - 4;
            }

            r.text(160, 10, "User website registrations by month").attr(txtattr);
            r.text(480, 10, "User website registrations by month").attr(txtattr);;
            r.text(160, 250, "User website registrations by month").attr(txtattr);
            r.text(480, 250, "User website registrations by month").attr(txtattr);

            r.linechart(10, 10, 300, 220, x, [y.slice(0, 1e3), y2.slice(0, 1e3), y3.slice(0, 1e3)]).hoverColumn(function () {
                this.set = r.set(
                    r.circle(this.x, this.y[0]),
                    r.circle(this.x, this.y[1]),
                    r.circle(this.x, this.y[2])
                );
            }, function () {
                this.set.remove();
            });

            r.linechart(330, 10, 300, 220, x, [y.slice(0, 1e4), y2.slice(0, 1e4), y3.slice(0, 1e4)], { shade: true });
            r.linechart(10, 250, 300, 220, x, [y, y2, y3], { nostroke: true, shade: true });

            var lines = r.linechart(330, 250, 300, 220, [[1, 2, 3, 4, 5, 6, 7],[3.5, 4.5, 5.5, 6.5, 7, 8]], [[12, 32, 23, 15, 17, 27, 22], [10, 20, 30, 25, 15, 28]], { nostroke: false, axis: "0 0 1 1", symbol: "circle", smooth: true }).hoverColumn(function () {
                this.tags = r.set();

                for (var i = 0, ii = this.y.length; i < ii; i++) {
                    this.tags.push(r.tag(this.x, this.y[i], this.values[i], 160, 10).insertBefore(this).attr([{ fill: "#fff" }, { fill: this.symbols[i].attr("fill") }]));
                }
            }, function () {
                this.tags && this.tags.remove();
            });

            lines.symbols.attr({ r: 6 });
            // lines.lines[0].animate({"stroke-width": 6}, 1000);
            // lines.symbols[0].attr({stroke: "#fff"});
            // lines.symbols[0][1].animate({fill: "#f00"}, 1000);
        };
  div#holder(style="height:480px")