extends ../../layout

block content
  
  .container.row.main
    
    include ../menu
    
    include _menu
    
    h1 Reports <span class='secondary'>- Friend Referrals</span>
    
    style
      td {
        text-align: center;
      }
    
    table.admin-gridview
      
      thead
        tr
          th
          th(colspan=3) Referrer
          th(colspan=3) Friend
          th
      
      thead
        tr
          th Date
          th First Name
          th Last Name
          th Email
          th First Name
          th Last Name
          th Email
          th Deal
      
      tbody
      - each referral in referrals
        tr
          - var referred = new Date(referral.created_at)
          - referral.user || (referral.user = {})
          td #{moment(referred).format('DD/MM/YYYY')}
          td #{referral.user.first_name}
          td #{referral.user.last_name}
          td #{referral.user.email}
          td #{referral.first_name}
          td #{referral.last_name}
          td #{referral.email}
          td
            a(href=referral.entity.url) #{referral.entity.code}
      
      tfoot
        tr
          td(colspan='8')
            &nbsp;