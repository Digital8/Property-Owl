extends ../../layout

block content
  .container.row.main
    include ../menu
    h1 Reports
      span.secondary  - Deal Registrations
    include reportsMenu
    .grid-header
      form#search-form
        input#propertySearch(type='text')
        | &nbsp;
        input.button(type='submit', value='Go')
        | &nbsp;
        input.button(type='submit', value='Reset')
        .divider
        select#propertyMonth
          option Month
          option January
          option February
          option March
          option April
          option May
          option June
          option July
          option August
          option September
          option October
          option November
          option December
        | &nbsp;
    table.admin-gridview
      thead
        tr
          td Date
          td User
          td Registrations
      tbody
      - var graph = []
      - each registration in registrations
        tr
          - var listed = new Date(registration.registered_at)
          td #{listed.getDay()}/#{listed.getMonth()}/#{listed.getFullYear()}
          td #{registration.first_name} #{registration.last_name}
          - graph.push([registration.first_name + ' ' + registration.last_name, registration.total])
          td= registration.total
  div#chart_div
  script
    // Load the Visualization API and the piechart package.
    google.load('visualization', '1.0', {'packages':['corechart']});

    // Set a callback to run when the Google Visualization API is loaded.
    google.setOnLoadCallback(drawChart);

    // Callback that creates and populates a data table,
    // instantiates the pie chart, passes in the data and
    // draws it.
    function drawChart() {

      // Create the data table.
      var data = new google.visualization.DataTable();
      data.addColumn('string', 'Topping');
      data.addColumn('number', 'Slices');
      data.addRows(
        !{JSON.stringify(graph)});

      // Set chart options
      var options = {
        'title':'Service Enquiries',
        'width':400,
        'height':300,
      };

      // Instantiate and draw our chart, passing in some options.
      var chart = new google.visualization.PieChart(document.getElementById('chart_div'));
      chart.draw(data, options);
    }