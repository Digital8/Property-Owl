extends ../../layout

block content
  .container.row.main
    include ../menu
    h1 Reports
      span.secondary  - Property Searches
    include reportsMenu
    .grid-header
      form#search-form

        select#propertyMonth
          option Month
          option January
          option February
          option March
          option April
          option May
          option June
          option July
          option August
          option September
          option October
          option November
          option December
        | &nbsp;
        select#propertyState
          option State
          option ACT
          option NSW
          option NT
          option QLD
          option SA
          option TAS
          option VIC
          option WA
        | &nbsp;
        select#propertyType
         option Property Type
          - each propertyType in propertyTypes
            option(value=propertyType.property_type_id) #{propertyType.type}
        | &nbsp;
        select#dealType
          option Deal Type
          option Owl Deal
          option Barn Deal
        | &nbsp;
        select#developmentStage
          option Development Stage
          option Off The Plan
          option Completed
        .divider
        input.button(type='submit', value='Go')
        | &nbsp;
        input.button(type='submit', value='Reset')
    table.admin-gridview
      thead
        tr
          td Date
          td State
          td Property Type
          td Deal Type
          td Stage
          td Price Range
          td Search Count
      tbody
      - var graph = []
      - each search in searches
        tr
          - var listed = new Date(search.date)
          td #{listed.getDay()}/#{listed.getMonth()}/#{listed.getFullYear()}
          td= search.state || ''
          td= search.property_type || '--'
          td= search.deal_type || '--'
          td= search.stage || '--'
          td= search.price || '--'
          td= search.total || 0
          if search.state != 'all'
            - graph.push([search.state,search.total])
  div#chart_div
  script
    // Load the Visualization API and the piechart package.
    google.load('visualization', '1.0', {'packages':['corechart']});

    // Set a callback to run when the Google Visualization API is loaded.
    google.setOnLoadCallback(drawChart);

    // Callback that creates and populates a data table,
    // instantiates the pie chart, passes in the data and
    // draws it.
    function drawChart() {

      // Create the data table.
      var data = new google.visualization.DataTable();
      data.addColumn('string', 'Topping');
      data.addColumn('number', 'Slices');
      data.addRows(
        !{JSON.stringify(graph)});

      // Set chart options
      var options = {
        'title':'State Search %',
        'width':400,
        'height':300,
      };

      // Instantiate and draw our chart, passing in some options.
      var chart = new google.visualization.PieChart(document.getElementById('chart_div'));
      chart.draw(data, options);
    }