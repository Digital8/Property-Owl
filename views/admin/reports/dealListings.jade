extends ../../layout

block content
  .container.row.main
    include ../menu
    h1 Reports
      span.secondary  - Deal Listings
    include reportsMenu
    div#holder(style="height:480px")
    .grid-header
      form#search-form
        input#propertySearch(type='text')
        | &nbsp;
        input.button(type='submit', value='Search')
        | &nbsp;
        input.button(type='submit', value='Reset')
        .divider
        select#propertyMonth
          option Month
          option January
          option February
          option March
          option April
          option May
          option June
          option July
          option August
          option September
          option October
          option November
          option December
        | &nbsp;
        select#propertyDeveloper
          option Developer
          - each developer in developers
            option(value=developer.user_id) #{developer.first_name} #{developer.last_name}
        | &nbsp;
        select#propertyStatus
          option Status
          option Pending
          option Pre-approved
          option Current
          option Ended
    table.admin-gridview
      thead
        tr
          td Created On
          td Developer
          td Status
          td Owl Deal Count
          td Barn Deal Count
      tbody
      - each listing in listings
        tr
          - var listed = new Date(listing.created_at)
          td #{listed.getDay()}/#{listed.getMonth()}/#{listed.getFullYear()}
          td= listing.developer
          td= listing.status
          td= listing.owl_deal_count
          td= listing.barn_deal_count
    
    script
        window.onload = function () {
            var r = Raphael("holder"),
                txtattr = { font: "12px sans-serif" };
            
            var x = [], y = [], y2 = [], y3 = [];

            for (var i = 0; i < 1e6; i++) {
                x[i] = i * 10;
                y[i] = (y[i - 1] || 0) + (Math.random() * 7) - 3;
                y2[i] = (y2[i - 1] || 150) + (Math.random() * 7) - 3.5;
                y3[i] = (y3[i - 1] || 300) + (Math.random() * 7) - 4;
            }

            r.text(160, 10, "Deal listings by month").attr(txtattr);
            r.text(480, 10, "Deal listings by month").attr(txtattr);;
            r.text(160, 250, "Deal listings by month").attr(txtattr);
            r.text(480, 250, "Deal listings by month").attr(txtattr);

            r.linechart(10, 10, 300, 220, x, [y.slice(0, 1e3), y2.slice(0, 1e3), y3.slice(0, 1e3)]).hoverColumn(function () {
                this.set = r.set(
                    r.circle(this.x, this.y[0]),
                    r.circle(this.x, this.y[1]),
                    r.circle(this.x, this.y[2])
                );
            }, function () {
                this.set.remove();
            });

            r.linechart(330, 10, 300, 220, x, [y.slice(0, 1e4), y2.slice(0, 1e4), y3.slice(0, 1e4)], { shade: true });
            r.linechart(10, 250, 300, 220, x, [y, y2, y3], { nostroke: true, shade: true });

            var lines = r.linechart(330, 250, 300, 220, [[1, 2, 3, 4, 5, 6, 7],[3.5, 4.5, 5.5, 6.5, 7, 8]], [[12, 32, 23, 15, 17, 27, 22], [10, 20, 30, 25, 15, 28]], { nostroke: false, axis: "0 0 1 1", symbol: "circle", smooth: true }).hoverColumn(function () {
                this.tags = r.set();

                for (var i = 0, ii = this.y.length; i < ii; i++) {
                    this.tags.push(r.tag(this.x, this.y[i], this.values[i], 160, 10).insertBefore(this).attr([{ fill: "#fff" }, { fill: this.symbols[i].attr("fill") }]));
                }
            }, function () {
                this.tags && this.tags.remove();
            });

            lines.symbols.attr({ r: 6 });
            // lines.lines[0].animate({"stroke-width": 6}, 1000);
            // lines.symbols[0].attr({stroke: "#fff"});
            // lines.symbols[0][1].animate({fill: "#f00"}, 1000);
        };
