tr(data-id=file.id)
  
  td
    a.link(href="/uploads/#{file.filename}")= file.id
  
  - var created_at = new Date(file.created_at)
  td #{moment(created_at).format('DD/MM/YYYY')}
  
  td
    a.link(href="/uploads/#{file.filename}")
      img(src="/uploads/#{file.filename}", style="height: auto; width: 25%;")
  
  td.actions
    
    a.link(href="/uploads/#{file.filename}")
      img(src='/images/manage.png', alt='Link')
      | Link
  
  td.actions
    
    a.delete(href="/admin/files/#{file.id}/delete")
      img(src='/images/delete.png', alt='Delete')
      | Delete