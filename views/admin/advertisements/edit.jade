extends ../../layout

block content

  .container.row.main
  
    include ../menu
    
    h1 Edit Advertisement: #{advertisement.description}
    
    include actions
    
    .grid-header.form-header
    
    .details
      
      form.details-form(action="/advertisements/#{advertisement.id}", method='post', enctype='multipart/form-data')
        
        include ../../flashify
        
        input(type='hidden', name='_method', value='put')
        
        include inputs
        
        .submit
          input.button(type='submit', value='Update')
          a.left-button(href='/advertisements') Cancel