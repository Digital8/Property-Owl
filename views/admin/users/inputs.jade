.left
  
  .inputs
    
    label(for='group') User Type
    
    select(name="account_type_id")
      - each group in groups
         option(value="#{group.account_type_id}", selected=group.account_type_id == user.account_type_id)= group.name
  
  .inputs
    label.required(for='first_name') Full Name *
    - if (user.first_name == undefined) user.first_name = ''
      input#first_name(type="text",name="first_name",placeholder="First Name",value="#{user.first_name}",class="half-field",maxlength='100')
      | &nbsp;
    - if (user.last_name == undefined) user.last_name = ''
      input#last_name(type="text",name="last_name",placeholder="Last Name",value="#{user.last_name}",class="half-field",maxlength='100')
  
  .inputs
    label(for='company') Company
    - if (user.company == undefined) user.company = ''
      input#company(type="text",placeholder="Company",name="company",value="#{user.company}",maxlength='100')
  
  .inputs
    label.required(for='phone') Phone
    - if (user.phone == undefined) user.phone = ''
      input#phone(type="text",placeholder="Phone",name="phone",value="#{user.phone}",maxlength='100')
  
  .inputs
    label(for='workPhone') Work Phone
    - if (user.work_phone == undefined) user.work_phone = ''
      input#work_phone(type="text",placeholder="Work Phone",name="work_phone",value="#{user.work_phone}",maxlength='100')
  
  .inputs
    label(for='mobile') Mobile
    - if (user.mobile == undefined) user.mobile = ''
     input#mobile(type="text",placeholder="Mobile",name="mobile",value="#{user.mobile}",maxlength='100')

.right
  
  .inputs
   label.required(for='email') Email *
   - if (user.email == undefined) user.email = ''
    input#email(type="text",placeholder="Email",name="email",value="#{user.email}",maxlength='100')
  
  .inputs
   label.required(for='password') Password *
   input#password(type="password",name="password",class="half-field",placeholder="Password",maxlength='100')
   | &nbsp;
   input#confirmPassword(type="password",placeholder="Confirm Password",name="confirm",class="half-field",maxlength='100')
    br
    p.note Password will not be changed if left blank
  
  .inputs
   label.required(for='address') Address
   - if (user.address == undefined) user.address = ''
    input#address(type="text",placeholder="Address",name="address",value="#{user.address}",maxlength='100')
  
  .left
    .inputs
     label.required(for='suburb') Suburb
     - if (user.suburb == undefined) user.suburb = ''
      input#suburb(type="text",placeholder="Suburb",name="suburb",value="#{user.suburb}",maxlength='100')
  .right
    .inputs
     label.required(for='postcode') Postcode
     - if (user.postcode == undefined) user.postcode = ''
      input#postcode(type="text", name="postcode", placeholder="Postcode", value=user.postcode, maxlength='100')
  
  br

  .inputs
    |  Subscribed to newsletter
    select(name='subscribed_news')
      option(value='1',selected=(user.subscribed_newsletter == 1) ? true : false) Yes
      option(value='0',selected=(user.subscribed_newsletter == 0) ? true : false) No

  .inputs
    |  Subscribed to property alerts
    select(name='property_alerts')
      option(value='1',selected=(user.subscribed_alerts == 1) ? true : false) Yes
      option(value='0',selected=(user.subscribed_alerts == 0) ? true : false) No

.inputs