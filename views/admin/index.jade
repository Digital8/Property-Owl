extends ../layout

block content
  .container.row.main
  
    include ../admin-menu
    
    h1 admin
    
    #dashboard-left-col
      .grid-header
        h2 Pending Owl Deal Listings
        // .grid-summary 1 - 4 of 24
      
      - if (properties.length == 0)
        table.admin-gridview
         thead
           tr 
             td(colspan='6')
              | There are no pending owl deals. 
      - else
        table.admin-gridview
         thead
           tr
             td ID
             td Listed On
             td Title
             td(colspan='3') Actions
          tbody
          - each property in properties
            tr
             td= property.property_id
             - var listed = new Date(property.created_at)
             td #{listed.getDay()}/#{listed.getMonth()}/#{listed.getFullYear()}
             td= property.title
             td.actions
               a(href='/properties/view/#{property.property_id}', alt='view property', target="_blank")
                 img(src='/images/view.png', alt='View')
                 | View
             td.actions
               a(href='/admin/properties/edit/#{property.property_id}', alt='edit property')
                 img(src='/images/edit.png', alt='Edit')
                 | Edit
              td.actions
                a(href='#')
                  img(src='images/approve.png', alt='View')
                  | Approve
          tfoot
            tr
              td(colspan='6')
                a.button(href="/admin/properties") Manage All Properties
                //- ul.pager
                //-   li
                //-     a(href='#') Prev
                //-   li.selected
                //-     a(href='#') 1
                //-   li
                //-     a(href='#') 2
                //-   li
                //-     a(href='#') 3
                //-   li
                //-     a(href='#') 4
                //-   li
                //-     a(href='#') Next
          //- TODO paging for all front and admin list views and gridviews
      .grid-header
        h2 Pending Barn Deal Listings
        
        // .grid-summary 1 - 4 of 24
      
      table.admin-gridview
       
       tbody
        tr
         td Project Listing 1
         td.actions
          a(href='#')
           img(src='images/view.png', alt='View')
           | View
         td.actions
          a(href='#')
           img(src='images/edit.png', alt='View')
           | Edit
         td.actions
          a(href='#')
           img(src='images/approve.png', alt='View')
           | Approve
        
       tfoot
        tr
         td(colspan='4')
          a.button(href="/admin/properties") Manage All Projects
          //- ul.pager
          //-  li
          //-   a(href='#') Prev
          //-  li.selected
          //-   a(href='#') 1
          //-  li
          //-   a(href='#') 2
          //-  li
          //-   a(href='#') 3
          //-  li
          //-   a(href='#') 4
          //-  li
          //-   a(href='#') Next
    
    #dashboard-right-col
      .grid-header
        h2 This Month
      
      table.admin-gridview
       tbody
        tr
         td
          img(src='images/grey-arrow.png')
          | Website Signups
         td 135
        tr
         td
          img(src='images/grey-arrow.png')
          | Deal Enquiries
         td 135
        tr
         td
          img(src='images/grey-arrow.png')
          | Deal Registrations
         td 135
        tr
         td
          img(src='images/grey-arrow.png')
          | Shared Deal Registrations
         td 135
       
       tfoot
         tr
           td(colspan='4')
             a.button(href='#') View More Statistics
      
      .grid-header
        h2 Advertising
      
      table.admin-gridview
        tbody
          tr
            td Ads currently in rotation
            td= activeAdvertisementCount
        tfoot
          tr
            td(colspan='4')
              a.button(href='/admin/advertisements') Manage Ads
      
      .grid-header
        h2 Product and Service Suppliers
      
      table.admin-gridview
        tbody
          tr
            td Suppliers currently in rotation
            td 36
        
        tfoot
          tr
            td(colspan='4')
              a.button(href="/admin/services") Manage Suppliers
