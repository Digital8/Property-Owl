extends layout

block content
  //
    main content
  .container.row.main
    include left_nav
    //
      center-col
    #center-col
      h1 Products & Services
      - if (services.length == 0)
        p No services have been listed on Property Owl
      - else
        - each service in services
          //
            listing
          .listing-summary
            .header
              h2= service.name
              - if(objUser.isAdmin())
                p(align="right")
                  small
                    a(href="/administration/services/edit/#{service.service_id}") Edit 
                    | &nbsp;| 
                    a(href="/administration/services/edit/#{service.service_id}") Delete
                    
            .listing-body
              .listing-thumb
                img.thumb(src='/images/services-thumb.jpg')
              .listing-details
                .summary
                  p= service.description
                .listing-links
                  a.enquire-button(href='#') Enquire
          //
            end listing

      //
        end center-col
    //
      right-col
    #right-col
      img#ad-tower1.ad-tower(src='/images/ad-tower.jpg', alt='Tower Advert')
      img#ad-tower2.ad-tower(src='/images/ad-tower.jpg', alt='Tower Advert')
    //
      end right-col
