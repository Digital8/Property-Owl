extends ../../layout

block content
 //
   main content
 .container.row.main
    h1 News Articles
    include ../../flashify
    .admin-actions
     ul
      li.disabled
       img(src='/images/manage.png')
       | Manage News
      li
       a(href="/administration/news/add")
        img(src='/images/add.png')
        | Add New Article
     .grid-summary 1 - 4 of 24
    .grid-header
     form#search-form
      input#memberSearch(type='text')
      input.button(type='submit', value='Go')
      input.button(type='submit', value='Reset')
    table.admin-gridview
     thead
      tr
       td Headline
       td Date
       td(colspan='2') Actions
     tbody
     - each post in news
      tr
       td= post.title
       td= post.posted_at
       td.actions
        a(href="/administration/news/edit/#{post.news_id}")
         img(src='/images/edit.png', alt='Edit')
         | Edit
       td.actions
        a(href="/administration/news/delete/#{post.news_id}")
         img(src='/images/delete.png', alt='Delete')
         | Delete
     tfoot
      tr
       td(colspan='5')
        ul.pager
         li.disabled
          a(href='#') Prev
         li.selected
          a(href='#') 1
         li
          a(href='#') 2
         li
          a(href='#') Next