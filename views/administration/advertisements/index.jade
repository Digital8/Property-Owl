extends ../../layout

block content
 .container.row.main
   include ../../admin-menu
   
   h1 Advertisements
   
   .admin-actions
     ul
       li
         a(href='/administration/advertisements/add')
           img(src='/images/add.png')
           | Add
   
   table.admin-gridview
     thead
       tr
         td ID
         td Description
         td Advertiser
         td Pages
         td Spaces
         td Image
         td Hyperlink
         td Duration
         td Visible
         td(colspan='2') Actions
     tbody
      - each advertisement in advertisements
         tr
           td= advertiser.advertisement_id
           td= advertiser.description
           td= advertiser.advertisers
           td= advertiser.pages
           td= advertiser.spaces
           td= advertiser.image
           td= advertiser.hyperlink
           td= advertiser.duration
           td= advertiser.visible
           
           td.actions
             a(href='/administration/advertisers/edit/#{advertiser.advertiser_id}', alt='edit')
               img(src='/images/edit.png', alt='edit')
               | Edit
           
           td.actions
             a(href='/administration/advertisers/delete/#{advertiser.advertiser_id}', alt='delete')
               img(src='/images/delete.png', alt='delete')
               | Delete