extends ../../layout

block content
  .container.row.main
   
    include ../../admin-menu
    
    h1 Add Advertisement
    
    .admin-actions
      ul
        li
          a(href="/administration/advertisements")
            img(src='/images/manage.png')
            | &nbsp;
            | Manage Advertisements
    
    .grid-header.form-header
      ol.six
        li.active
          .ol-1-active
          | Details
    
    .details
      h2 Advertisement Details
      hr
      form.details-form(action="/administration/advertisements/add", method="post", enctype="multipart/form-data")
        include ../../flashify
        
        .inputs
          label.required(for="description") Description
            textarea#description(type="text", name="description")
        
        .inputs
          label(for='page') Advertiser
            select(name="advertiser", class="select2", data-placeholder="Choose an advertiser")
              option(value="")
              - each advertiser in advertisers
                option(value="#{advertiser.advertiser_id}")= advertiser.name
        
        .inputs
          label(for='page') Page
            select(name="page", class="select2", data-placeholder="Choose a page")
              option(value="")
              - each page in pages
                option(value="#{page.page_id}")= page.header
        
        .inputs
          label(for='adspace') Space
            select(name="adspace", class="select2 iconed", data-placeholder="Choose a position")
              option(value="")
              - each adspace in adspaces
                option(value="#{adspace.adspace_id}")= adspace.name
        
        .inputs
          label.required(for='image') Image
            input#image(type="file", name="image")
        
        .inputs
          label.required(for='hyperlink') Hyperlink
            input#hyperlink(type="url", name="hyperlink", value="")
        
        .inputs
          label.required(for='visible') Visible
            input#visible(type="checkbox", name="visible", checked="checked")
        
        .inputs
          label.required(for='start') Start
            input#start(type="date", name="start", value="")
        
        .inputs
          label.required(for='stop') Stop
            input#stop(type="date", name="stop", value="")
        
        .inputs
        
        .submit
          input.button(type='submit', value='Post Advertisement')
          a.left-button(href="/administration/advertisements") Cancel