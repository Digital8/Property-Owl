extends ../../layout

block content
 //
   main content
 .container.row.main
   //
     center-col
   #center-col
    h1 Add New Property
    h3 Features
    include ../../flashify
    h3 Files
    p Attach floor plans, appraisals etc. in PDF format. Attach Virtual Tours in swf, mov, mp4, jpg, mp3 format (max size xMB)
    table(width="100%")
      tr
        td
          form(action="/administration/properties/add?step=2", method="post",enctype="multipart/form-data")
            p
              input(type="file",name="file")
            p File Name: 
              input(type="text",name="filename")
            p Type: 
              select(name="file_type")
                option(value="pdf") PDF
                option(value="video") Video
            p
              input(type="submit",name="cmdUpload")
        td
          h3 
            em Uploaded Files
          - if (files.length == 0)
            p No files have been uploaded.
          - else
            - each file in files
              li= file.description
                | &nbsp;
                a(href="#")&times;
              
    hr
    form(action="/administration/properties/add?step=2",method="post")
      p Number of Bedrooms: 
        select(name="bedrooms")
          option(value="1") 1
          option(value="2") 2
          option(value="3") 3
          option(value="4") 4
          option(value="5") 5
          
      p Number of Bathrooms: 
        select(name="bathrooms")
          option(value="1") 1
          option(value="2") 2
          option(value="3") 3
          option(value="4") 4
          option(value="5") 5
          
      p Number of Car Spaces: 
        select(name="cars")
          option(value="1") 1
          option(value="2") 2
          option(value="3") 3
          option(value="4") 4
          option(value="5") 5
          
      p Internal Area (sq.m): 
        input(type="text",name="internal_area")
      
      p External Area (sq.m): 
        input(type="text",name="external_area")
      p
        input(type="submit",value="Next",name="cmdNext")
      