.listing-summary
  
  .header
    
    a(href="/#{req.type}/#{post.id}")
      
      h2= post.title
  
  .listing-body
    
    .listing-thumb
      
      a.details-button(href="/#{req.type}/#{post.id}")
        
        if post.image
         
          img.thumb(src=post.image.thumbnail, alt=post.title)
        
        else
        
          img.thumb(src='/images/placeholder.png', alt=post.title)
    
    .listing-details
      
      .summary
        p= moment(new Date(post.created_at)).format('LLL')
        p= _s.prune(_s.stripTags(post.content), 200)
      
      .listing-links
        a.details-button(href="/#{req.type}/#{post.id}")
          img#info-icon(src='/images/info-icon.png', alt='View details')
