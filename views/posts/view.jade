extends ../layout

block content
  
  .container.row.main
    
    include ../left_nav
     
    #center-col.mobile-full
      
      h1 #{_s.capitalize(req.type)}
      
      a(href="/#{req.type}") View All #{_s.capitalize(req.type)}
      
      h2= post.title
      
      p= post.posted_at
      
      .listing-details
        
        .listing-thumb
          
          if post.images[0]
            img.thumb(src='/uploads/#{post.imageURL()}', alt='#{post.title}')
          else
            img.thumb(src='/images/placeholder.png', alt='#{post.title}')
      
      div !{post.content.replace(/\n/g, '<p />')}
    
    include ../right_nav