extends ../layout

block content

  .container.row.main
    
    include ../left_nav
    
    #center-col.mobile-full
      
      h1= _s.capitalize(req.type)
      
      h3 Innovation in delivering Australia's best property deals
      
      if posts.length
        
        each post in posts
          
          include summary
      
      else
        p There are no #{req.type} items for now. Please check back soon. 
    
    include ../right_nav