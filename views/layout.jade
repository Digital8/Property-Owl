  body
    - if (objUser.isHacker())
      .hacker
        include admin/menu
      style
        .hacker { background: #BADA55; }
        .hacker #admin-menu { background: #BADA55; }
        .hacker #admin-menu > ul > li { color: #D95477; text-shadow: none; }
        .hacker #admin-menu > ul > li > a { color: #D95477; text-shadow: none; }
    
    .register-overlay.overlay
      .modal.main.success
        a.close-register(href='#')
          img(src='/images/modal-close-white.png', alt='Close')
        h1.modal-title Register to see more!
        .modal-content.details-form
          input.half.register-first-name(type='text', placeholder='First Name')
          input.half.register-last-name(type='text', placeholder='Last Name')
          input.half.register-email(type='text', placeholder='Email Address')
          input.half.register-postcode(type='text', placeholder='Postcode')
          input.half.register-password(type='password', placeholder='Password')
          input.half.register-password2(type='password', placeholder='Confirm Password')
          .submit-buttons
            input.button.right.register-button(type='submit', value='Create Account')
            .terms-checkbox
              input#terms(type='checkbox')
              label(for='terms')
                | I agree to the
                br 
                a(href='/terms-and-conditions',target="_blank") Terms & Conditions
          hr
          .center
            | Already registered?
            br
            a.button.show-login(href='#') Click here!
    
    #generic-modal.modal-overlay(style='display: none;')
      .modal.main.success
          a.close-modal(href='#')
            img(src='/images/modal-close.png', alt='Close')
          h1#generic-modal-title.modal-title Modal title!
          #generic-modal-content.details-form


    .secure-deal-overlay.overlay
      .modal.main.success
        a.close-secure-deal(href='#')
          img(src='/images/modal-close-white.png', alt='Close')
        
        h1.modal-title Express Your Interest Now!
        
        .modal-content.details-form
          div.secure-deal-errors.error
          input.half.secure-deal-first-name(type='text', placeholder='First Name', value="#{objUser.firstName}", disabled='disabled')
          input.half.secure-deal-last-name(type='text', placeholder='Last Name', value="#{objUser.lastName}", disabled='disabled')
          input.half.secure-deal-email(type='text', placeholder='Email Address', value="#{objUser.email}", disabled='disabled')
          input.half.secure-deal-phone(type='text', placeholder='Phone Number', value="#{objUser.mobile}")
          textarea.full.secure-deal-comment(placeholder='Please leave a comment for the developer', style="width:98%;")
          
          .submit-buttons
            input.button.right.secure-deal-button(type='submit', value='Submit', style="margin-left:50%; margin-top:0.75em; position:relative; left:-6em;")

    .refer-friend-overlay.overlay
      .modal.main.success
        a.close-refer-friend(href='#')
          img(src='/images/modal-close-white.png', alt='Close')
        
        h1.modal-title Refer a Friend!
        .modal-content.details-form
          .raf-errors
          input.half.refer-friend-fullname(type='text', placeholder="Friend's Full Name")
          input.half.refer-friend-email(type='text', placeholder="Friend's Email Address")
          textarea.full.refer-friend-comment(placeholder='Send your friend a message', style="width:98%;")
          
          .submit-buttons
            input.button.right.refer-friend-button(type='submit', value='Submit', style="margin-left:50%; margin-top:0.75em; position:relative; left:-6em;")

    .login-overlay.overlay
      .modal.main.success
          a.close-login(href='#')
            img(src='/images/modal-close-white.png', alt='Close')
          h1.modal-title Login
          .login-error(style="display:none; text-align:center; font-weight:bold; color:#ff4949; padding-bottom:10px;")
          .modal-content.details-form
            input.half.login-email(type='text', placeholder='Email Address')
            input.half.login-password(type='password', placeholder='Password')
            .submit-buttons
              input.button.right.login-button(type='submit', value='Login')
              .terms-checkbox(style='text-align: right;')
                input#remember(type='checkbox')
                label(for='remember') Remember Me
            hr
            .center
              | Don't have an account?
              br
              a.button.show-register(href='#') Click here!
              | &nbsp; 
              a.button.forgot-password(href='/account/recover') Forgot Password?
    

    .container.row
      header#header
        #top-header
        
          #logo-box
            a#logo(href='/'): img(src='/images/logo.png')

          - var i = 0
          each ad in adspaceTop
