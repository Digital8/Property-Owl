#left-col
  
  - if (req.url != '/')
    
    .deal-stats
      
      .timer
        
        #timer
          #day-timer
            span.label Days
            span#day-timer-days.value
          #hour-timer
            span.label Hours
            span#day-timer-hours.value
          #minute-timer
            span.label Mins
            span#day-timer-mins.value
        
        #map
      
      - if (locals.owl)
        .counter
          span.label Number of Enquiries
          span.value= owl.registrations.length

  .barn-box
    a(href='/barns/browse')
      h2 The Barn
      img#barn-image(src='/images/barn.png', alt='The Barn Group Deals')
      h3 Group Deals
  
  .refer-a-friend-box
    a(href='/refer-a-friend')
      h2 Refer a Friend
      img#refer-a-friend-image(src='/images/refer-a-friend.png', alt='Refer a Friend')
      h3 Get a 
        span.refer-emphasis $1000 
        | Nest Egg!      
  
  - if (locals.barn || locals.share || (locals.owl && req.url != '/'))
    include share

  - if ((req.url!='/owls/top' && req.url!='/owls/' && !locals.owl && !locals.barn) || req.url == '/')
    - var i = 0, max = 1;
    each ad in adUpperBox 
      - i++
      if (i <= max)
        include adverts/box

    i = 0;
    each ad in adLowerBox 
      - i++
      if (i <= max)
        include adverts/box
  
  - if (locals.enquire)
    
    - if (locals.barn)
      - (locals.deal = barn)
      - (locals.entity_type = 'barn')
    
    - if (locals.owl)
      - (locals.deal = owl)
      - (locals.entity_type = 'owl')
    
    include _enquire
  
  - if ((!locals.owl && !locals.barn) || req.url == '/')
    
    include search