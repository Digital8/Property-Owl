          //-   area#map-tas(shape='square', coords='120,140,170,140,170,155,120,155', href='/owls/state/tas')
      
      - if (locals.owl)
        .counter
          span.label Number of Enquiries
          span.value= 60 + 1337 + Math.floor((Math.random() * 1337))
          // +- Number(owl.registrations) + 1337 + Math.floor((Math.random() * 1337))
  
  .barn-box
    a(href='/barns')
      h2 The Barn
      img#barn-image(src='/images/barn.png', alt='The Barn Group Deals')
      h3 Group Deals
  
  - if (locals.barn || locals.share || (locals.owl && locals.area != 'index'))
    include share
  
  - if(req.url!='/owls/top' && req.url!='/owls/')
    - var i = 0, max = 1;
    each ad in adUpperBox 
      - i++
      if (i <= max)
        include adverts/box

    i = 0;
    each ad in adLowerBox 
      - i++
      if (i <= max)
        include adverts/box
  
  - if (locals.enquire)
    
    - if (locals.barn)
      - (locals.deal = barn)
      - (locals.entity_type = 'barn')
    
    - if (locals.owl)
      - (locals.deal = owl)
      - (locals.entity_type = 'owl')
    
    .enquiry
      
      h2 Enquire About This Deal
      
      form#input-form.enquire-form
        
        label(for='name') Name
        input.name(type='text', disabled, value=objUser.fullName)
        
        label(for='email') Email:
        input.email(type='text', disabled, value=objUser.email)
        
        label(for='phone') Phone
        input.phone(type='text')
        
        input(type='hidden', name='entity_id', value=deal.id)
        input(type='hidden', name='entity_type', value=entity_type)
        
        label(for='contactMethod') Contact Method
        select.contactMethod(name='contactMethod')
         option(value='phone') Phone
         option(value='email') Email
        
        label(for='enquiry') Comments
        textarea.enquiry-box(name='enquiry', rows='5')
        
        input.enquire.button(type='submit', value='Submit')
  
  - if (!locals.owl || (locals.area && locals.area == 'index'))
    include search