extends ../layout

block content
  
  .container.row.main
    
    include ../left_nav
     
    #center-col
      h1 News Updates
      
      a(href="/news") View All News
      
      h2= post.title
      
      p= post.posted_at
      
      .listing-details
        .listing-thumb
          - if (post.images[0])
            img.thumb(src='/uploads/#{post.imageURL()}', alt='#{post.title}')
          - else
            img.thumb(src='/images/placeholder.png', alt='#{post.title}')
      
      div !{post.content.replace(/\n/g, '<p />')}
    
    include ../right_nav