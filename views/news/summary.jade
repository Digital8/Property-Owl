.listing-summary
  
  .header
    h2= post.title
  
  .listing-body
    
    .listing-thumb
      
      a.details-button(href="/news/#{post.news_id}")
        img.thumb(src='/images/news-thumb.jpg', alt='')
    
    .listing-details
      
      .summary
        p= post.posted_at
        p= _s.prune(post.content, 200)
      
      .listing-links
        a.details-button(href="/news/#{post.news_id}")
          img#info-icon(src='/images/info-icon.png', alt='View details')
