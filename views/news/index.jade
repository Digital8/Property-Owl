extends ../layout

block content
  //
    main content
  .container.row.main
    //
      left-col
    #left-col
      .deal-stats
        .timer
          #timer
            #day-timer
              span.label Days
              span.value 01
            #hour-timer
              span.label Hours
              span.value 13
            #minute-timer
              span.label Mins
              span.value 07
          #map
            img#map-image(src='/images/map.png', usemap='#australia', alt='Click on a State of Australia')
            map(name='australia')
              area#map-wa(shape='polygon', coords='65,25,65,100,17,116,3,62,57,19', href='#')
              area#map-nt(shape='polygon', coords='65,25,65,69,103,69,103,35,91,24,94,13,75,10', href='#')
              area#map-qld(shape='polygon', coords='103,68,103,34,111,39,119,10,159,82,116,82,116,68', href='#')
              area#map-sa(shape='polygon', coords='116,68,65,68,65,100,116,129', href='#')
              area#map-nsw(shape='polygon', coords='116,82,159,82,145,126,116,104', href='#')
              area#map-vic(shape='polygon', coords='116,104,145,126,137,131,110,128,116,129', href='#')
              area#map-act(shape='square', coords='155,110,185,110,185,120,155,120', href='#')
              area#map-tas(shape='square', coords='120,140,170,140,170,155,120,155', href='#')
        .counter
          span.label Number of Enquiries
          span.value 1,345
      .barn-box
        h2 The Barn
        img#barn-image(src='/images/barn.png', alt='The Barn Group Deals')
        h3 Group Deals
      img#ad-box1.ad-box(src='/images/ad-box.jpg', alt='Box Advert')
      img#ad-box2.ad-box(src='/images/ad-box.jpg', alt='Box Advert')
      .find-deals
        h2 Find Deals
        form#input-form
          img(src='/images/search-map-icon.png', alt='State / Territory')
          label(for='propertyState') State / Territory
          select#propertyState
            option All
            option ACT
            option NSW
            option NT
            option QLD
            option SA
            option TAS
            option VIC
            option WA
          img(src='/images/search-property-icon.png', alt='Property Type')
          label(for='propertyType') Property Type
          select#propertyType
            option All
            option Apartment
            option Townhouse
            option Unit
            option House
            option Land
            option House and Land
            option Villa
            option Acreage
          img(src='/images/search-deal-icon.png', alt='Deal Type')
          label(for='propertyDealType') Deal Type
          select#propertyDealType
            option All
            option Stamp Duty
            option Furniture Package
            option Blinds
            option Rental Guarantee
            option Entertainment System
          img(src='/images/search-price-icon.png', alt='Minimum Price')
          label(for='propertyMinPrice') Min. Price
          select#propertyMinPrice
            option Any
            option 50,000
            option 100,000
            option 150,000
            option 200,000
            option 250,000
            option 300,000
            option 350,000
            option 400,000
            option 450,000
            option 500,000
            option 550,000
          img(src='/images/search-price-icon.png', alt='Maximum Price')
          label(for='propertyMaxPrice') Max. Price
          select#propertyMaxPrice
            option Any
            option 50,000
            option 100,000
            option 150,000
            option 200,000
            option 250,000
            option 300,000
            option 350,000
            option 400,000
            option 450,000
            option 500,000
            option 550,000
            option 600,000
            option 650,000
            option 700,000
            option 750,000
            option 800,000
            option 850,000
            option 900,000
            option 950,000
            option 1,000,000
            option 1,250,000
            option 1,500,000
            option 1,750,000
            option 2,000,000
            option 2,500,000
            option 3,000,000
            option 4,000,000
            option 5,000,000
            option 10,000,000
          .small-left
            img.small(src='/images/search-bed-icon.png', alt='Number of Beds')
            label(for='propertyMinBeds') Min. Beds
            select#propertyMinBeds
              option Any
              option Studio
              option 1
              option 2
              option 3
              option 4
              option 5
          .small-right
            img.small(src='/images/search-bed-icon.png', alt='Number of Beds')
            label(for='propertyMaxBeds') Max. Beds
            select#propertyMaxBeds
              option Any
              option Studio
              option 1
              option 2
              option 3
              option 4
              option 5
          .small-left
            img.small(src='/images/search-bath-icon.png', alt='Number of Bathrooms')
            label(for='propertyBathrooms') Bathrooms
            select#propertyBathrooms
              option Any
              option 1+
              option 2+
              option 3+
              option 4+
              option 5+
          .small-right
            img.small(src='/images/search-car-icon.png', alt='Number of Car Spaces')
            label(for='propertyCarSpaces') Car Spaces
            select#propertyCarSpaces
              option Any
              option 1+
              option 2+
              option 3+
              option 4+
              option 5+
          img(src='/images/search-development-icon.png', alt='Development Stage')
          label(for='propertyState') Development Stage
          select#propertyState
            option All
            option Off The Plan
            option Newly Constructed
          input.button(type='submit', value='Submit')
    //
      end left-col
    //
      center-col
    #center-col
      h1 News Updates
      h3 Innovation in delivering Australia's best property deals
      - each post in news
        //
          listing
        .listing-summary
          .header
            h2= post.title
          .listing-body
            .listing-thumb
              img.thumb(src='/images/news-thumb.jpg', alt='')
            .listing-details
              .summary
                p= post.posted_at
                p= post.content
              .listing-links
                a.details-button(href='#')
                  img#info-icon(src='/images/info-icon.png', alt='View details')
                  |  Details
      //
        end listing
    //
      end center-col
    //
      right-col
    #right-col
      img#ad-tower1.ad-tower(src='/images/ad-tower.jpg', alt='Tower Advert')
      img#ad-tower2.ad-tower(src='/images/ad-tower.jpg', alt='Tower Advert')
    //
      end right-col
  //
    end main content

    script
      $('small.timeago').timeago();