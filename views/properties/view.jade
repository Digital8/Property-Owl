extends ../layout

block content

  div#fb-root
  script
    (function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_GB/all.js#xfbml=1";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
    
  //main content
  .container.row.main
    //
      left-col
    #deal_id(style="display:none")
      | #{property.property_id}
    #left-col
      include ../left_nav
      .share
        ul
          li
            a(href='#', onclick='javascript:window.print()')
              img(src='/images/share-print-icon.png', alt='Print')
              | Print Deal
          li.savebuttons(data-property="#{property.property_id}")
            img(src='/images/share-save-icon.png', alt='Save')
            | Save Deal
          li
            img(src='/images/share-refer-icon.png', alt='Refer')
            | Refer A Friend
          li
            .fb-like(data-href='http://www.propertyowl.com.au/properties/view/#{property.property_id}', data-send='false', data-layout='button_count', data-width='125', data-show-faces='false')
          li
            a.twitter-share-button(href='https://twitter.com/share', data-url='http://www.propertyowl.com.au/properties/view/#{property.property_id}') Tweet
            script
              !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
      .enquiry
        h2 Enquire About This Deal
        form#input-form
          label(for='propertyName') Name
          input#propertyName(type='text',disabled,value=objUser.firstName+' '+objUser.lastName)
          label(for='propertyEmail') Email:
          input#propertyEmail(type='text',disabled,value=objUser.email)
          label(for='propertyPhone') Phone
          input#propertyPhone(type='text',value=objUser.phone)
          label(for='propertyContactMethod') Contact Method
          select#propertyContactMethod
            option Phone
            option Email
          label(for='propertyComments') Comments
          textarea#propertyComments(rows='5')
          input.button(type='submit', value='Submit')
    //- end left-col
    //- center-col
    #wide-center-col
      //- image slider
      #mySlider.evoslider.galleriffic
        dl
          dt slide one
          //- dd(data-src='/uploads/#{image.filename}', data-thumb='/images/slide1-thumb.jpg')
          dd(data-src='/uploads/slider2.jpg', data-thumb='/uploads/slide1-thumb.jpg')
          dt slide two
          dd(data-src='/uploads/slider3.jpg', data-thumb='/uploads/slide1-thumb.jpg')
          dt slide three
          dd(data-src='/uploads/slider4.jpg', data-thumb='/uploads/slide1-thumb.jpg')
          dt slide four
          dd(data-src='/uploads/slider5.jpg', data-thumb='/uploads/slide1-thumb.jpg')
          dt slide five
          dd(data-src='/uploads/slider1.jpg', data-thumb='/uploads/slide1-thumb.jpg')

      .property-info
        #left
          h1= property.title
          | #{property.address}, #{property.suburb}, #{property.state.toUpperCase()} #{property.postcode}
          h2 Property Details
          p= property.description
          .general-features
            h3 General Features
            ul
              - if(property.price)
                li Price: 
                  strong= '$' + property.price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")
              - if(property.property_type)
                li Property Type: 
                  strong #{property.property_type}
              - if(property.bedrooms)
                li Bedrooms: 
                  strong #{property.bedrooms}
              - if(property.bathrooms)
                li Bathrooms: 
                  strong #{property.bathrooms}
              - if(property.cars)
                li Car Spaces: 
                  strong #{property.cars}
              - if(property.development_stage)
                li Development Stage: 
                  strong #{property.development_stage}
              - if(property.internal_area)
                li Internal Area: 
                  strong #{property.internal_area} sq. m
              - if(property.external_area)
                li External Area: 
                  strong #{property.external_area} sq. m
              - if(property.internal_area && property.external_area)
                li Total Area: 
                  strong #{parseFloat(property.external_area) + parseFloat(property.internal_area)} sq. m
            h3 Indoor Features
            p= property.indoor_features

          .other-features
            h3 Outdoor Features
            p= property.outdoor_features
            h3 Other Features
            p= property.other_features
        #right
          .deal
            h2
              | Reveal the Deal
              img.arrow(src='/images/blue-arrow-icon-down.png', alt='Reveal the Deal')
            - if (deals.length == 0)
              ul
                li No deals have been listed
            - else
              ul
                - each deal in deals
                  li= '$' + deal.value.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") + ' ' + deal.type.replace(/\w\S*/g, function(txt){ return txt.charAt(0).toUpperCase() + txt.substr(1).toLowerCase()})
          .secure-deal
            a.secure-button.register(href='#',data-id="#{property.property_id}", data-type="property") Secure the Deal!
              span.sub (expression of interest)
          iframe#google-map(width='100%', height='350', frameborder='0', scrolling='no', marginheight='0', marginwidth='0', src='http://maps.google.com/maps?f=q&source=s_q&hl=en&geocode=&q=76+Orchard+Terrace,+St+Lucia,+QLD&sll=37.0625,-95.677068&sspn=51.177128,65.390625&ie=UTF8&hq=&hnear=76+Orchard+Terrace,+St+Lucia+Queensland+4067,+Australia&t=m&z=14&ll=-27.499779,152.994913&output=embed')
          br
          a(href='http://maps.google.com/maps?f=q&source=embed&hl=en&geocode=&q=76+Orchard+Terrace,+St+Lucia,+QLD&sll=37.0625,-95.677068&sspn=51.177128,65.390625&ie=UTF8&hq=&hnear=76+Orchard+Terrace,+St+Lucia+Queensland+4067,+Australia&t=m&z=14&ll=-27.499779,152.994913', target="_blank") View Larger Map
          
          if(property.barn_id)
            .barn-link
              a(href="/barn/deals/#{property.barn_id}") View Barn Deal
                img#barn-image(src='/images/barn-link.png', alt='View Barn Deal')
          
          .more-info
            h2 
              | More Information
              img.arrow(src='/images/grey-arrow-icon-down.png', alt='More Information')
            - if (files.length == 0)
              ul
                li No files have been uploaded
            - else
              ul
              - each file in files
                li
                  a(href="/uploads/#{file.filename}") #{file.description}
    //
      end center-col
  //
    end main content
