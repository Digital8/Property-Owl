      .property-info
        - if (lots.length > 0 )
          table.barn-lots
            thead
              td Lot
              td Bed
              td Bath
              td Car
              td Level
              td Int. Size
              td Ext. Size
              td Aspect
              td List Price
              td Floor Plan
              td Register
            - var i = 0;
            - each lot in lots
              - i++
              tbody
                td= i
                td= lot.bedrooms
                td= lot.bathrooms
                td= lot.carspaces
                td= lot.level
                td #{lot.interior_size} sq.m
                td #{lot.exterior_size} sq.m
                td= lot.aspect
                td= lot.price
                td
                  - if (lot.floor_plan.length == 0)
                    em Not Available
                  - else
                    a(href='#') Download
                td
                  a.barn-register(href='#', alt='Register') Register
